                    android:src="@color/drawer_divider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <Button
                        android:id="@+id/btnAtras"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:background="#339933"
                        android:textColor="#FFFFFF"
                        android:text="Atras" />

                    <Button
                        android:id="@+id/btnEliminar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#339933"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:text="Eliminar" />

                    <Button
                        android:id="@+id/btnAdelante"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#339933"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:text="Siguiente" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btnGrabarVideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:background="#339933"
                android:textColor="#FFFFFF"
                android:text="Grabar video" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@color/drawer_divider" />

            <LinearLayout
                android:id="@+id/mostrarVideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextureView
                    android:id="@+id/video"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="@color/drawer_divider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/btnReproducirDetener"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#339933"
                        android:textColor="#FFFFFF"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:onClick="clickPlayStop" />

                    <Button
                        android:id="@+id/btnEliminarVideo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#339933"
                        android:textColor="#FFFFFF"
                        android:layout_weight="1"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:text="Eliminar video" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>