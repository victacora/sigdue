<?xml version="1" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <com.sigdue.ui.AutoResizeTextView
                android:id="@+id/codigo_dane"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textSize="19sp"
                android:textStyle="bold" />

            <com.sigdue.ui.AutoResizeTextView
                android:id="@+id/codigo_predio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/codigo_dane"
                android:textSize="17sp" />

            <com.sigdue.ui.AutoResizeTextView
                android:id="@+id/clase_predio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/codigo_predio"
                android:textSize="17sp" />

            <com.sigdue.ui.AutoResizeTextView
                android:id="@+id/tenencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/clase_predio"
                android:textSize="17sp" />

            <com.sigdue.ui.AutoResizeTextView
                android:id="@+id/distancia_poblado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tenencia"
                android:textSize="17sp" />

            <com.sigdue.ui.AutoResizeTextView
                android:id="@+id/tipo_documento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/distancia_poblado"
                android:textSize="17sp" />

            <com.sigdue.ui.AutoResizeTextView
                android:id="@+id/topografia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tipo_documento"
                android:textSize="17sp" />

            <com.sigdue.ui.AutoResizeTextView
                android:id="@+id/estado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/topografia"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/estado"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnEditar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Editar"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btnVerFotos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ver fotos"
                    android:visibility="gone" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
